<h1>Task Manager</h1>
<h2>My tasks</h2>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task)%>
      <%= link_to "Delete this task", task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </li>
  <% end %>
</ul>

<%= link_to "New task", new_task_path  %>
