<h1>Task Manager</h1>
<h2>My tasks</h2>

<ul>
  <% @tasks.each do |task| %>

    <li><%= link_to task.title, task_path(task)%>
      <%= link_to "<i class='fa-regular fa-trash-can'></i>".html_safe, task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </li>
  <% end %>
</ul>

<%= link_to "New task", new_task_path, class: 'btn btn-primary', style: '--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;'  %>
