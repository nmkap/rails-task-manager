
<%= form_with model: @task do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_area :details %>

    <%= f.submit "Create Task" %>
<% end %>

<%= link_to "Back to task list", tasks_path %>
